<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
              android:id="@+id/fragment_history_menu_bottom"
              android:layout_width="match_parent"
              android:layout_height="180dp"
              android:orientation="vertical"
              android:background="#ffffff">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:padding="8dp"
            android:text="@string/do_you_want_to_clear_storage"/>
    <LinearLayout
            android:id="@+id/clear_storage_delete_item"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete_grey_24dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="@string/delete"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/clear_storage_cancel_item"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cancel_grey_24dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:text="@android:string/no"/>
    </LinearLayout>
</LinearLayout>