<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/ic_cpu_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/cpuIconImageView"/>
        <TextView
                android:text="@string/cpu_cores_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SystemInfoTitleTextStyle"
                app:layout_constraintStart_toEndOf="@id/cpuIconImageView" android:layout_marginStart="8dp"
                android:id="@+id/cpuTitle"
                app:layout_constraintBottom_toBottomOf="@+id/cpuIconImageView"
                app:layout_constraintTop_toTopOf="@+id/cpuIconImageView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>