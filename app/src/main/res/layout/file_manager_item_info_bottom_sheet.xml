<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
                                                   android:id="@+id/fragment_history_menu_bottom"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:orientation="vertical">
    <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/fileManagerInfoImage"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fileManagerInfoName"
            android:textSize="16sp"
            android:textColor="@color/primary_dark_color"
            app:layout_constraintTop_toBottomOf="@+id/fileManagerInfoImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/fileManagerInfoPath"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/fileManagerInfoName"/>
    <TextView
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="@string/path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fileManagerInfoPathTitle"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/fileManagerInfoPath"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/fileManagerInfoSize"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/fileManagerInfoSizeTitle"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="@string/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fileManagerInfoSizeTitle"
            app:layout_constraintTop_toBottomOf="@+id/fileManagerInfoPath"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"/>

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/fileManagerInfoModificationDate"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/fileManagerInfoModificationDateTitle"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="@string/modified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fileManagerInfoModificationDateTitle"
            app:layout_constraintTop_toBottomOf="@+id/fileManagerInfoSize"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"/>

    <TextView
            android:id="@+id/fileManagerInfoOkButton"
            android:text="@string/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/secondary_color"
            android:background="@null"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/fileManagerInfoModificationDate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.25"/>
</androidx.constraintlayout.widget.ConstraintLayout>