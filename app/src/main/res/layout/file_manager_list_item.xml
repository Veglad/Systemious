<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/file_manager_card_height">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/fileManagerIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                tools:text="emulated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark_color"
                android:textSize="16sp"
                android:id="@+id/fileManagerFileNameTextView"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fileManagerIcon"
                android:layout_marginStart="32dp"
                app:layout_constraintBottom_toTopOf="@+id/fileManagerFileSizeTextView"/>

        <TextView
                tools:text="15 MB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:id="@+id/fileManagerFileSizeTextView"
                app:layout_constraintStart_toEndOf="@+id/fileManagerIcon"
                android:layout_marginStart="32dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fileManagerFileNameTextView"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>